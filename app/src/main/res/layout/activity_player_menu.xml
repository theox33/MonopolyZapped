<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundtech_half"
    android:clipChildren="false"
    android:clipToPadding="false">

    <!-- ===== Header ===== -->
    <ImageView
        android:id="@+id/headerBg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/headerToken"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintStart_toStartOf="@id/headerBg"
        app:layout_constraintTop_toTopOf="@id/headerBg"
        app:layout_constraintBottom_toBottomOf="@id/headerBg"
        android:layout_margin="24dp" />

    <TextView
        android:id="@+id/headerName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nom"
        android:textStyle="bold"
        android:textSize="36sp"
        android:textColor="@android:color/white"
        android:fontFamily="@font/kabel_thin"
        app:layout_constraintStart_toEndOf="@id/headerToken"
        app:layout_constraintTop_toTopOf="@id/headerBg"
        app:layout_constraintBottom_toBottomOf="@id/headerBg"
        app:layout_constraintEnd_toStartOf="@id/headerMoney"
        android:layout_margin="24dp" />

    <TextView
        android:id="@+id/headerMoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:fontFamily="@font/kabel_thin"
        android:text="1500M"
        android:textColor="@android:color/white"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/headerBg"
        app:layout_constraintEnd_toEndOf="@id/headerBg"
        app:layout_constraintTop_toTopOf="@id/headerBg" />

    <!-- ===== Grille centrale ===== -->
    <GridLayout
        android:id="@+id/actionsGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="64dp"
        android:layout_marginHorizontal="32dp"
        android:layout_marginVertical="32dp"
        android:alignmentMode="alignMargins"
        android:columnCount="4"
        android:rowCount="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headerBg">

        <ImageButton
            android:id="@+id/btnProprietes"
            style="?attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="55dp"
            android:scaleX="2"
            android:scaleY="2"
            android:src="@drawable/activite_proprietes" />

        <ImageButton
            android:id="@+id/btnMaisons"
            style="?attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="55dp"
            android:scaleX="2"
            android:scaleY="2"
            android:src="@drawable/activite_maisons" />

        <ImageButton
            android:id="@+id/btnDepart"
            style="?attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="55dp"
            android:scaleX="2"
            android:scaleY="2"
            android:src="@drawable/activite_depart" />

        <ImageButton
            android:id="@+id/btnPayerLoyer"
            style="?attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="55dp"
            android:scaleX="2"
            android:scaleY="2"
            android:src="@drawable/activite_payer_loyer" />

        <ImageButton
            android:id="@+id/btnPayerJoueur"
            style="?attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="55dp"
            android:scaleX="2"
            android:scaleY="2"
            android:src="@drawable/activite_payer_joueur" />

        <ImageButton
            android:id="@+id/btnEncheres"
            style="?attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="55dp"
            android:scaleX="2"
            android:scaleY="2"
            android:src="@drawable/activite_encheres" />

        <ImageButton
            android:id="@+id/btnChance"
            style="?attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="55dp"
            android:scaleX="2"
            android:scaleY="2"
            android:src="@drawable/activite_chance" />

        <ImageButton
            android:id="@+id/btnCaisse"
            style="?attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="55dp"
            android:scaleX="2"
            android:scaleY="2"
            android:src="@drawable/activite_caisse_de_communaute" />

        <ImageButton
            android:id="@+id/btnSortirPrison"
            style="?attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="55dp"
            android:scaleX="2"
            android:scaleY="2"
            android:src="@drawable/activite_sortir_de_prison" />

        <ImageButton
            android:id="@+id/btnTaxeDeLuxe"
            style="?attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="55dp"
            android:scaleX="2"
            android:scaleY="2"
            android:src="@drawable/activite_taxe_de_luxe" />

        <ImageButton
            android:id="@+id/btnImpots"
            style="?attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="55dp"
            android:scaleX="2"
            android:scaleY="2"
            android:src="@drawable/activite_impots" />

        <ImageButton
            android:id="@+id/btnFaillite"
            style="?attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="55dp"
            android:scaleX="2"
            android:scaleY="2"
            android:src="@drawable/activite_faillite" />

    </GridLayout>

    <!-- ===== Icônes périphériques ===== -->
    <ImageButton
        android:id="@+id/btnSettings"
        style="?attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:scaleX="2"
        android:scaleY="2"
        android:src="@drawable/activite_parametres"
        app:layout_constraintBottom_toTopOf="@+id/actionsGrid"
        app:layout_constraintEnd_toStartOf="@+id/actionsGrid" />

    <ImageButton
        android:id="@+id/btnEndGame"
        style="?attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:scaleX="2"
        android:scaleY="2"
        android:src="@drawable/activite_end_game"
        app:layout_constraintBottom_toTopOf="@+id/actionsGrid"
        app:layout_constraintStart_toEndOf="@+id/actionsGrid" />

    <ImageButton
        android:id="@+id/btnHome"
        style="?attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:scaleX="2"
        android:scaleY="2"
        android:src="@drawable/activite_home"
        app:layout_constraintEnd_toStartOf="@+id/actionsGrid"
        app:layout_constraintTop_toBottomOf="@+id/actionsGrid" />

    <ImageButton
        android:id="@+id/btnHelp"
        style="?attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:scaleX="2"
        android:scaleY="2"
        android:src="@drawable/activite_aide"
        app:layout_constraintStart_toEndOf="@+id/actionsGrid"
        app:layout_constraintTop_toBottomOf="@+id/actionsGrid" />

</androidx.constraintlayout.widget.ConstraintLayout>
