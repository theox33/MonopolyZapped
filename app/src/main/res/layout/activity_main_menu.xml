<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <!-- Fond (cover) -->
    <ImageView
        android:id="@+id/bg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/backgroundtech_half"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Logo haut -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:contentDescription="TODO"
        android:src="@drawable/monopoly_logo"
        app:layout_constraintWidth_percent="0.75"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:alpha="0"/>

    <!-- Mr Monopoly centrÃ© -->
    <ImageView
        android:id="@+id/mr"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:adjustViewBounds="true"
        android:alpha="0"
        android:scaleX="1"
        android:scaleY="1"
        android:src="@drawable/intro_monopoly_half"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo"
        app:layout_constraintWidth_percent="0.2" />

    <!-- Colonne gauche -->
    <LinearLayout
        android:id="@+id/leftColumn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="50dp"
        android:alpha="0"
        android:gravity="center_vertical"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/mr"
        app:layout_constraintEnd_toStartOf="@+id/mr"
        app:layout_constraintTop_toTopOf="@+id/mr">

        <ImageView
            android:id="@+id/btnStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/commencer" />

        <Space
            android:layout_width="0dp"
            android:layout_height="18dp" />

        <ImageView
            android:id="@+id/btnContinue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/continuer_partie" />
    </LinearLayout>

    <!-- Grille bas-droit -->
    <LinearLayout
        android:id="@+id/rightGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:alpha="0"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/mr"
        app:layout_constraintStart_toEndOf="@+id/mr"
        app:layout_constraintTop_toTopOf="@+id/mr">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btnInstructions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/instructions" />

            <Space
                android:layout_width="16dp"
                android:layout_height="0dp" />

            <ImageView
                android:id="@+id/btnOptions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/options" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btnMiniGames"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/minijeux" />

            <Space
                android:layout_width="16dp"
                android:layout_height="0dp" />

            <ImageView
                android:id="@+id/btnOtherGames"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/autres_jeux" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
