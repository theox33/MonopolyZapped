<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardScanRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Fond -->
    <ImageView
        android:id="@+id/bg2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/backgroundtech_half"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Cadres coin -->
    <ImageView
        android:id="@+id/cardFrame3"
        android:layout_width="271dp"
        android:layout_height="158dp"
        android:adjustViewBounds="false"
        android:rotationX="180"
        android:scaleType="fitCenter"
        android:src="@drawable/cardscan_cornerframe"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/cardFrame4"
        android:layout_width="271dp"
        android:layout_height="158dp"
        android:adjustViewBounds="false"
        android:rotationX="180"
        android:rotationY="-180"
        android:scaleType="fitCenter"
        android:src="@drawable/cardscan_cornerframe"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/cardFrame"
        android:layout_width="271dp"
        android:layout_height="158dp"
        android:adjustViewBounds="false"
        android:scaleType="fitCenter"
        android:src="@drawable/cardscan_cornerframe"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/cardScanShowMe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:src="@drawable/cardscan_showme"
        app:layout_constraintEnd_toEndOf="@+id/mrMonopoly"
        app:layout_constraintTop_toBottomOf="@+id/mrMonopoly" />

    <ImageView
        android:id="@+id/cardFrame2"
        android:layout_width="271dp"
        android:layout_height="158dp"
        android:adjustViewBounds="false"
        android:rotationY="180"
        android:scaleType="fitCenter"
        android:src="@drawable/cardscan_cornerframe"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Retour -->
    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:adjustViewBounds="true"
        android:src="@drawable/back_btn_half"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Bandeau de scan -->
    <ImageView
        android:id="@+id/scanBand"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/cardscan_bg4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.487" />

    <!-- Mr Monopoly -->
    <ImageView
        android:id="@+id/mrMonopoly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/cardscan_mr"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/bg2"
        app:layout_constraintStart_toEndOf="@+id/scanBand"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- ➕ Pion choisi (top, centré) -->
    <ImageView
        android:id="@+id/ivChosenToken"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="104dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/hasbro_token_car_bg" />

    <!-- ➕ Texte d’état (bottom, centré) -->

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.90" />

    <TextView
        android:id="@+id/tvScanStatus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:fontFamily="@font/kabel_thin"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/guideline"
        app:layout_constraintEnd_toEndOf="@+id/scanBand"
        app:layout_constraintStart_toStartOf="@+id/scanBand"
        tools:text="Jean, choisissez votre carte bancaire et placez-la sur l’écran." />

</androidx.constraintlayout.widget.ConstraintLayout>